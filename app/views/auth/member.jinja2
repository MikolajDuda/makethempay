<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>
            Member
        </title>
        {{ JSGlue.include() }}
        <script type="module">
            import { form_to_obj, async_json_request } from "/static/js/form_utils.js"

            window.onload = () => {
                var memberForm = document.getElementById('member_form')

                memberForm.onsubmit = (e) => {
                    e.preventDefault()

                    var requestData = form_to_obj(memberForm)
                    var url = Flask.url_for('auth.api_member')

                    async_json_request(url, 'POST', JSON.stringify(requestData), (data) => {
                        console.log(data)

                        if(data.success)
                            alert(data.success[0])
                        else
                            alert(data.error)
                    })
                }
            }
        </script>
    </head>
    <body>
        {% include "include/display_flashes.inc.jinja2" %}
        <h1>Login</h1>
        <form id="member_form" name="member_form">
            <label for="user_id">USER ID</label>
            <input id="user_id" name="user_id" type="text">
            <input value="GO!" type="submit">
        </form>
    </body>
</html>
